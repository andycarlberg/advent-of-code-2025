{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // --- File Layout ---
    // "rootDir": "./src",
    // "outDir": "./dist",

    // --- Environment Settings (Optimized for ESM in Node.js) ---
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022", // Use a specific, modern target like ES2022 or ESNext
    "esModuleInterop": true, 
    "lib": ["es2022"], // Use a specific lib array that matches your target
    "types": ["node", "jest"], // ADD "jest" here so TypeScript knows about Jest globals

    // --- Other Outputs ---
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // --- Stricter Typechecking Options ---
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // --- Style Options (Uncomment if you want to enforce these) ---
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true, 
    // "noUnusedParameters": true, 
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // --- Recommended Options ---
    "strict": true,
    "jsx": "react-jsx",
    
    // These three are great for ensuring clean code and are often recommended
    // alongside ESM to prevent issues during transpilation.
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
